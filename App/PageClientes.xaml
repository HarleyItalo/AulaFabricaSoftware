<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="App.PageClientes">
	<ContentPage.Content>
        <StackLayout Padding="50" >
            <Entry Placeholder="Numero 1" x:Name="Numero1" Keyboard="Numeric" >
            </Entry>
            <Picker x:Name="Picker" Title="Selecione a Operação">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>+</x:String>
                        <x:String>-</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Entry Placeholder="Numero 2" x:Name="Numero2" Keyboard="Numeric" ></Entry>
            <Button Text="Cadastrar" x:Name="Cadastrar" Clicked="CadastrarEvent"  ></Button>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
